[user]
	name = lil-shimon
	email = shimon101018@gmail.com
[core]
	excludesfile = /Users/shimonlil/.gitignore_global
  pager = delta
[init]
	defaultBranch = main
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
    side-by-side = true
[merge]
    conflictStyle = zdiff3
[alias]
    # 新規ファイルも含めてdiff表示（終了後にintent-to-addを取り消す）
    diffn = "!git add -N . && git diff; git reset"
