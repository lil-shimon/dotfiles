{
  // editor font settings
  "editor.fontFamily": "JetBrainsMonoExtraBold Nerd Font",
  "editor.fontSize": 14,
  // terminal font settings
  "terminal.integrated.fontFamily": "JetBrainsMonoExtraBold Nerd Font",
  "terminal.integrated.fontSize": 16,
  // format on save
  "editor.formatOnSave": true,
  // minimap
  "editor.minimap.enabled": false,
  // cursor smooth
  "editor.cursorSmoothCaretAnimation": "on",
  // eslint
  "eslint.debug": true,
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // format
  "editor.formatOnSaveMode": "modificationsIfAvailable",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // vscode-neovim
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  // typescript
  "typescript.inlayHints.parameterNames.enabled": "literals",
  // neovim ui modifier
  // 初期設定値をそのままコピー（拡張機能ページ参照）
  "nvim-ui.nvimColorNormal": "#ffc600",
  "nvim-ui.nvimColorInsert": "#D32F2F",
  "nvim-ui.nvimColorVisual": "#673AB7",
  "nvim-ui.nvimColorReplace": "#000",
  "nvim-ui.nvimColorCustomizationKeys": [
    "tab.activeBorder",
    "editorCursor.foreground"
  ],
  "workbench.colorCustomizations": {
    "tab.activeBorder": "#ffc600",
    "editorCursor.foreground": "#ffc600",
    "[Stranger Things]": {
      "activityBar.background": "#000000",
      "activityBar.foreground": "#ffffff",
      "activityBarBadge.background": "#ff0000",
      "editor.background": "#000000",
      "editor.foreground": "#ffffff",
      "editor.inactiveSelectionBackground": "#330000",
      "editor.lineHighlightBackground": "#220000",
      "editor.selectionBackground": "#440000",
      "editorGroupHeader.tabsBackground": "#000000",
      "editorGroupHeader.tabsBorder": "#ff0000",
      "editorLineNumber.foreground": "#cc0000",
      "list.activeSelectionBackground": "#440000",
      "list.activeSelectionForeground": "#ffffff",
      "list.hoverBackground": "#220000",
      "list.hoverForeground": "#ffffff",
      "list.inactiveSelectionBackground": "#330000",
      "sideBar.background": "#000000",
      "sideBar.foreground": "#ffffff",
      "sideBarSectionHeader.background": "#330000",
      "sideBarSectionHeader.foreground": "#ffffff",
      "statusBar.background": "#000000",
      "statusBar.foreground": "#ffffff",
      "statusBarItem.hoverBackground": "#550000",
      "tab.activeBackground": "#220000",
      "tab.activeForeground": "#ffffff",
      "tab.inactiveBackground": "#330000",
      "tab.inactiveForeground": "#cc0000",
      "terminal.ansiBlack": "#000000",
      "terminal.ansiBlue": "#0000ff",
      "terminal.ansiBrightBlack": "#555555",
      "terminal.ansiBrightBlue": "#5555ff",
      "terminal.ansiBrightCyan": "#55ffff",
      "terminal.ansiBrightGreen": "#55ff55",
      "terminal.ansiBrightMagenta": "#ff55ff",
      "terminal.ansiBrightRed": "#ff5555",
      "terminal.ansiBrightWhite": "#ffffff",
      "terminal.ansiBrightYellow": "#ffff55",
      "terminal.ansiCyan": "#00ffff",
      "terminal.ansiGreen": "#00ff00",
      "terminal.ansiMagenta": "#ff00ff",
      "terminal.ansiRed": "#ff0000",
      "terminal.ansiWhite": "#ffffff",
      "terminal.ansiYellow": "#ffff00",
      "terminal.background": "#000000",
      "terminal.foreground": "#ffffff",
      "titleBar.activeBackground": "#000000",
      "titleBar.activeForeground": "#ff0000",
      "titleBar.inactiveBackground": "#330000",
      "titleBar.inactiveForeground": "#cc0000"
    },
    "tab.activeBackground": "#483D8B"
  },
  "workbench.colorTheme": "Tokyo Night",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
 }
