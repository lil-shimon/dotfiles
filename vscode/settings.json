  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "nxConsole.showNodeVersionOnStartup": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "window.customTitleBarVisibility": "windowed",

  // Code Spell Checker
  "cSpell.userWords": [
    "aespa",
    "Behaviour",
    "codegen",
    "Contentful",
    "dataid",
    "FANCLUB",
    "FANCRUB",
    "findy",
    "gravide",
    "ifrit",
    "OPENAI",
    "tauri",
    "testid",
    "typecheck",
    "yaclock",
    "Yusha"
  ],
  "cSpell.allowCompoundWords": false,
  "terminal.integrated.env.osx": {},
  "accessibility.voice.keywordActivation": "off",
  "workbench.editor.revealIfOpen": false,
  // default shell
  "terminal.integrated.profiles.osx": {
    "fish": {
      "path": "/usr/local/bin/fish",
      "args": ["-l"]
    }
  },
  "terminal.integrated.defaultProfile.osx": "fish",
  "playwright.reuseBrowser": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "update.mode": "manual",
  // vimが重いので追加
  // https://blog.koh.dev/2019-10-13-vscode-vim/
  "vim.statusBarColorControl": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "wallaby.startAutomatically": false,
  "console-ninja.featureSet": "Pro",
  "gitlens.views.commitDetails.files.layout": "tree",

  // font settings
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontWeight": "600",

  // customize terminal color
  "workbench.colorCustomizations": {
    "terminal.background": "#1E1E2E",
    "terminal.foreground": "#C678DD",
    "terminalCursor.foreground": "#A9DC76"
  }
}
